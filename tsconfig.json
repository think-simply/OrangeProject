{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "baseUrl": ".", // Root directory for resolution
    "paths": {
      "#helper/*": ["src/helper/*"],
      "#test/*": ["src/test/*"],
      "#hooks/*": ["src/hooks/*"],
      "#config/*": ["src/config/*"],
    }
  },
  "include": ["src/**/*.ts", "src/helper/*.ts"]
}